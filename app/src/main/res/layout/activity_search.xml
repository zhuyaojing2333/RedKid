<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.hhzmy.activity.SearchActivity">

    <LinearLayout
        android:id="@+id/ll_sousuo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bk_icon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/cpt_back"/>

        <EditText
            android:id="@+id/search_edit"
            android:background="#eeeeee"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:drawableLeft="@mipmap/icon_search_home"
            android:layout_height="wrap_content"
            android:hint="好奇"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="搜索"/>

    </LinearLayout>
    <View
        android:layout_below="@id/ll_sousuo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee"
        android:id="@+id/view" />

    <ImageView
        android:id="@+id/voice_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/voice_selector"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
