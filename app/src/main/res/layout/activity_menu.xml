<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.hhzmy.activity.MenuActivity">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RadioButton
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:checked="true"
            android:button="@null"
            android:layout_weight="1"
            android:drawableTop="@drawable/home_selector" />

        <RadioButton
            android:id="@+id/class_btn"
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:drawableTop="@drawable/class_selector" />

        <RadioButton
            android:id="@+id/shopping_btn"
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:drawableTop="@drawable/shopping_selector" />

        <RadioButton
            android:id="@+id/mybuy_btn"
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:button="@null"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/mybuy_selector" />
    </RadioGroup>

</RelativeLayout>
